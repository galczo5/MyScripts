[global]
    font = Open Sans 10
    allow_markup = yes

    format = "<b>%a:</b> %s\n%b"
    sort = yes
    indicate_hidden = yes
    alignment = left
    bounce_freq = 0
    show_age_threshold = 60
    word_wrap = yes

    ignore_newline = no
    geometry = "350x5+785+50"
    transparency = 0
    idle_threshold = 120

    monitor = 0
    follow = keyboard
    sticky_history = yes
    line_height = 0

    separator_height = 0

    # padding between text and separator
    padding = 10

    # horizontal padding
    horizontal_padding = 10

    separator_color = frame
    startup_notification = true

    dmenu = /usr/bin/dmenu -p dunst:

    # browser for opening urls in context menu
    browser = opera

[frame]
    width = 0
    color = "#0a0a0a"

[urgency_low]
    # IMPORTANT: colors have to be defined in quotation marks.
    # Otherwise the '#' and following  would be interpreted as a comment.
    background = "#0a0a0a"
    foreground = "#d1d1d1"
    timeout = 10

[urgency_normal]
    background = "#0a0a0a"
    foreground = "#d1d1d1"
    timeout = 10

[urgency_critical]
